<resources>
    <!-- Dark theme for night mode -->
    <style name="Base.Theme.MineDownload" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#81C784</item>
        <item name="colorPrimaryVariant">#4CAF50</item>
        <item name="colorOnPrimary">#000000</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FFB74D</item>
        <item name="colorSecondaryVariant">#FF9800</item>
        <item name="colorOnSecondary">#000000</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E0E0E0</item>
        
        <!-- Error colors -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#A0A0A0</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.MineDownload.Button</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.MineDownload.CardView</item>
        
        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.MineDownload.TextInputLayout</item>
    </style>
</resources>
